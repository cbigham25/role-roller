            <label for="inputName">Enter Password:</label>
            <input type="password" class="form-control" id="createPassword" placeholder="Password">
          </div>
        </div>
        <button type="submit" class="btn btn-primary account-submit">Submit</button>
      </div>
    </form>
  </div>
</div>


